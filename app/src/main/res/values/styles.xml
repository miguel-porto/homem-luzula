    <style name="BigTextViews" parent="AppTheme">
        <item name="android:textViewStyle">@style/MyTextView</item>
        <item name="android:checkboxStyle">@style/MyCheckbox</item>
        <item name="android:editTextStyle">@style/MyEdittext</item>
        <item name="android:spinnerDropDownItemStyle">@style/MyTextView</item>
        <!--<item name="android:layout_marginTop">16dp</item>-->
        <item name="android:textSize">22sp</item>
    </style>

    <style name="MyTextView" parent="android:Widget.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MyCheckbox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="MyEdittext" parent="android:Widget.EditText">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="tecla" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">46sp</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">#999999</item>
        <!--<item name="android:layout_columnWeight">1</item>-->
    </style>

    <style name="titlespecies" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <!--<item name="android:textColor">@android:color/holo_blue_light</item>-->
    </style>

    <style name="phenostate" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:background">#171E4A</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="phenostate_letter" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
    </style>

    <style name="phenostate_caption" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
    </style>

    <style name="floatingmenu" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/logsec</item>
        <item name="android:background">@drawable/circle_toggle</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:button">@android:color/transparent</item>
    </style>

    <style name="phenostate_compact" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/logsec</item>
        <item name="android:button">@android:color/transparent</item>
    </style>

    <style name="color_button" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:enabled">true</item>
        <item name="android:button">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textSeparator">
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">26dp</item>
    </style>

</resources>
